                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.HomePhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobilePhone)
                    </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.ConfirmPassword)
                    </td>*@
                <td>

                    <table class="table">
                        <tbody class="form-group" style="width:100% !important; text-align: center !important">
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        <input type="submit" value="View" class="btn btn-primary" style="background-color:olivedrab;border-radius:50%; border: 1px solid black;display:inline-block !important" />
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">
                                        <input type="submit" value="Edit" class="btn btn-primary" style="background-color:darkcyan;border-radius:50%; border: 1px solid black;display:inline-block !important" />
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id">
                                        <input type="submit" value="Delete" class="btn btn-danger" style="background-color:orangered;border-radius:50%; border: 1px solid black;display:inline-block !important" />
                                    </a>
                                <td>
                            </tr>
                        </tbody>
                    </table>
