                <th>
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.HomePhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MobilePhone)
                </th>*@
            @*<th>
                    @Html.DisplayNameFor(model => model.ConfirmPassword)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.TextBoxFor(modelItem => item.Forename, new { @class = "griditemstyle", @readonly = true })
                </td>


                <td>
                    @Html.TextBoxFor(modelItem => item.Surname, new { @class = "griditemstyle", @readonly = true })
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>


                @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
