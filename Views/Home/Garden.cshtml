@@model Entities.MyImages

@{
    ViewData["Title"] = "Garden";
}

<br />


<h1>Garden</h1>

<div id="carouselExampleControls" class="carousel slide" style="margin:auto; height:400px; width:800px" data-ride="carousel" />


<div id="myCarousel" class="carousel slide text" style="font-size:12px" data-ride="carousel">

    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>


    <div class="carousel-inner" role="listbox">

        @{
            bool donefirst = false;

            foreach (var image in Model.Images)
            {
                if (!donefirst)
                {
                    <div class="carousel-item active">
                        <img src="@Url.Content(image)" style='width:100%; height:auto; max-width:100%; '>
                        @image
                    </div>
                    donefirst = true;
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@Url.Content(image)" style='width:100%; height:auto; max-width:100%; '>
                        @image
                    </div>

                }
            }
        }
        /div>


