@model Entities.Enquiry

@{
    ViewData["Title"] = "Enquiry";
}

<br />

<div class="panel panel-success">
    <div class="panel-heading text-center"><h1>General Enquiry</h1></div>
    <br />
    <br />
    Please submit your query here: you will receive a response within 24 hours.
    <br />
    <br />
    <form class="panel-body" asp-action="Enquiry" asp-Controller="Home" method="Post">
        <div class="p-a-1">
            <div asp-validation-summary="All"></div>

            <div class="form-inline">
                <div class="form-group">
                    <table class="table" border="0">
                        <thead>
                            <tr>
                                <th>
                                    <label asp-for="EnquiryText">Enquiry</label>
                                    <textarea style="width:500px;height:200px" asp-for="EnquiryText"></textarea>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <label asp-for="EmailAddress">Your Email Address </label>
                                    <input class="form-control" style="width:500px;" asp-for="EmailAddress" />
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <br>
            <br>

